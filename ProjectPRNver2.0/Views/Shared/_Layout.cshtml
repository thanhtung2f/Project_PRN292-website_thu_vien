<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/resource/css/home.css" rel="stylesheet" />
    <script src="~/resource/js/jquery-1.11.3.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.css">
    <link href="~/resource/font/fontawesome-free-5.15.3-web/css/all.min.css" rel="stylesheet" />
    <link href="~/resource/css/signin.css" rel="stylesheet" />
    <link href="~/resource/css/signup.css" rel="stylesheet" />
    <link href="~/resource/css/detailItem.css" rel="stylesheet" />
    <link href="~/resource/css/category.css" rel="stylesheet" />
    <link href="~/resource/css/listAuthor.css" rel="stylesheet" />
    <link href="~/resource/css/detailAuthor.css" rel="stylesheet" />
    <link href="~/ResourceAdmin/css/bootstrap-reset.css" rel="stylesheet">
    <link href="~/ResourceAdmin/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/resource/css/cart.css" rel="stylesheet" />
    <link href="~/resource/css/payment.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="~/ResourceAdmin/css/style.css" rel="stylesheet">
    <link href="~/ResourceAdmin/css/style-responsive.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
</head>
<body style="overflow-x:hidden; background:url(/resource/img/background.jpg)">
    <header>
        <div class="header__wrapper">
            <div class="header__logo">
                <img src="/resource/img/1.png" alt="" class="header__logo-img" />
            </div>
            @using (Html.BeginForm("SearchResult", "Search", FormMethod.Post))
            {

                <div class="header__search">
                    <div class="header__search--input-wrapper">
                        @Html.TextBox("txtSearch", "", htmlAttributes: new { @class = "header__search--input", @placeholder = "Nhập để tìm kiếm sách" })
                    </div>
                </div>
            }
            @{
                var session = (ProjectPRNver2._0.Common.UserLogin)Session[ProjectPRNver2._0.Common.CommonConstants.USER_SESSION];
            }
        <div class="header__cart">
            @if (session != null)
            {
                <a href="@Url.Action("Index", "Cart")" class="header__cart-icon--cart-link"><i class="header__cart-icon-cart fas fa-shopping-cart"></i></a>
            }
            else
            {
                <a href="@Url.Action("Login", "Login")" class="header__cart-icon--cart-link"><i class="header__cart-icon-cart fas fa-shopping-cart"></i></a>
            }
        </div>


            @if (session != null)
            {
                <nav class="navbar navbar-expand-sm">
                    <div class="collapse navbar-collapse" id="navbar-list-4">
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fas fa-user-circle rounded-circle"></i>
                                    <span class="header__navbar-user-name" style="color:#000;">@session.UserName</span>
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item" href="~/nguoi-dung/id=@session.UserID">Tài khoản của tôi</a>
                                    @Html.ActionLink("Đăng xuất", "Logout", "Login", null, new { @class = "dropdown-item" })
                                </div>
                            </li>
                        </ul>
                    </div>
                </nav>
            }
            else
            {
                <div class="header__signup">

                    @Html.ActionLink("Đăng ký/ Đăng nhập", "Login", "Login")
                </div>
            }
        </div>
        <!-- Category -->
        <div class="categories">
            <div class="row__CATEGORY">
                <div class="category">
                    @Html.ActionLink("Trang chủ", "Index", "Home")
                    <div class="col-xl-2 dropdown">
                        <button class="btn btn-secondary dropdown-toggle" style="background: url(~/resource/img/background.jpg);" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                            Chủ đề
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                            <li class="dropdown-item">@Html.ActionLink("Lịch sử", "Index", "Category", new { id = 1 }, htmlAttributes: null)</li>
                            <li class="dropdown-item">@Html.ActionLink("Khoa học", "Index", "Category", new { id = 2 }, htmlAttributes: null)</li>
                            <li class="dropdown-item">@Html.ActionLink("Truyện tranh", "Index", "Category", new { id = 3 }, htmlAttributes: null)</li>
                            <li class="dropdown-item">@Html.ActionLink("Văn học việt nam", "Index", "Category", new { id = 4 }, htmlAttributes: null)</li>
                            <li class="dropdown-item">@Html.ActionLink("Văn học nước ngoài", "Index", "Category", new { id = 5 }, htmlAttributes: null)</li>
                        </ul>
                    </div>
                    @Html.ActionLink("Liên hệ", "Index", "Contact")
                    @Html.ActionLink("Tác giả", "../BookAuthor/ListAuthor", "Home")
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        @RenderBody()
        @RenderSection("scripts", required: false)
    </div>
    <footer>
        <div class="footer__img">
            <img src="/resource/img/1.png" alt="">
        </div>
        <div class="footer__heading">
            <h1>Ươm mầm tri thức Việt</h1>
            <p class="footer__text">Copyright ©2021 All rights reserved | This website is made with  by MonsterBook</p>
        </div>
    </footer>
    <script src="~/resource/js/home.js"></script>
    @RenderSection("jsFooter", required: false);
</body>
</html>